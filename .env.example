# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# SMTP Configuration (Office 365)
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_EMAIL=your_email@organization.com
SMTP_PASSWORD=your_smtp_password_here

# OAuth/SSO Configuration (Optional)
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8501/oauth/callback

# Application Configuration
APP_NAME=Organizational Spotlight
DATABASE_PATH=./database/spotlight.db
SECRET_KEY=your_secret_key_for_encryption
